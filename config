### exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# set $Locker i3lock && sleep 1
set $mode_system System   (B)loquear |  (L)ogout |  (S)uspender  |  (H)ibernar |  (R)einiciar |  (D)esligar
mode "$mode_system" {
    bindsym b exec --no-startup-id  $HOME/i3/apps/i3lock-fancy/lock -f 'DejaVu-Sans'
    bindsym l exec --no-startup-id $HOME/i3/scripts/i3exit logout
    bindsym s exec --no-startup-id $HOME/i3/scripts/i3exit suspend
    bindsym s exec --no-startup-id $HOME/i3/scripts/i3exit hibernate
    bindsym r exec --no-startup-id $HOME/i3/scripts/i3exit reboot
    bindsym d exec --no-startup-id $HOME/i3/scripts/i3exit shutdown

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"

